# Docker Environment Variables
# Copy this file to .env and fill in your values

# Database
DB_PASSWORD=your_secure_database_password_here

# Django Secret Key (generate with: python -c "import secrets; print(secrets.token_urlsafe(50))")
SECRET_KEY=your-secret-key-here-minimum-50-characters

# Encryption Keys (generate with commands in ENV_VARIABLES.md)
ENCRYPTION_KEY=your-32-byte-base64-encoded-key
ENCRYPTION_SALT=your-16-byte-base64-encoded-salt

# Network Configuration
# For local network access, use your machine's local IP (e.g., 192.168.1.100)
# For internet access, use your public IP or domain name
ALLOWED_HOSTS=localhost,127.0.0.1,your-ip-or-domain
CORS_ALLOWED_ORIGINS=http://localhost,http://your-ip-or-domain
CSRF_TRUSTED_ORIGINS=http://localhost,http://your-ip-or-domain

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@coastal-banking.com

# Frontend URL
FRONTEND_URL=http://your-ip-or-domain

# Optional: Sentry
SENTRY_DSN=
SENTRY_ENABLED=False
