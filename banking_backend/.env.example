# Coastal Banking Backend - Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# CORE SETTINGS
# =============================================================================
DJANGO_DEBUG=False
SECRET_KEY=your-super-secret-key-here-replace-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
ENVIRONMENT=production

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgres://user:password@localhost:5432/coastal_banking
# Or use individual settings:
# DB_NAME=coastal_banking
# DB_USER=postgres
# DB_PASSWORD=your-password
# DB_HOST=localhost
# DB_PORT=5432

# =============================================================================
# REDIS (for caching and fraud detection)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
# CACHE_BACKEND=django.core.cache.backends.redis.RedisCache

# =============================================================================
# SENTRY MONITORING (optional)
# =============================================================================
SENTRY_ENABLED=False
# SENTRY_DSN=https://your-key@sentry.io/project-id
# SENTRY_TRACES_SAMPLE_RATE=1.0
# SENTRY_SEND_DEFAULT_PII=False
# SENTRY_DEBUG=False

# =============================================================================
# SECURITY
# =============================================================================
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FRAUD_AUDIT_ENCRYPTION_KEY=your-fernet-encryption-key-here

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://your-frontend-domain.com

# =============================================================================
# SMS SERVICE (Sendexa)
# =============================================================================
SMS_PROVIDER=sendexa
SENDEXA_API_KEY=your-sendexa-api-key
SENDEXA_SENDER_ID=CoastalBank

# =============================================================================
# EMAIL (for notifications)
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# =============================================================================
# STATIC & MEDIA FILES
# =============================================================================
STATIC_ROOT=/path/to/staticfiles
MEDIA_ROOT=/path/to/media

# =============================================================================
# API RATE LIMITING
# =============================================================================
RATE_LIMIT_DEFAULT=100/hour
RATE_LIMIT_AUTH=5/minute
