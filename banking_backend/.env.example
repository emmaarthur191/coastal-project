# Django settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
DATABASE_URL=sqlite:///db.sqlite3

# Email settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourbank.com
FRONTEND_URL=http://localhost:3000

# CORS settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://your-frontend-domain.com

# Security settings
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Rate limiting
RATELIMIT_ENABLE=True
ANON_RATE_LIMIT=100/hour
USER_RATE_LIMIT=1000/hour

# JWT settings
ACCESS_TOKEN_LIFETIME_MINUTES=60
REFRESH_TOKEN_LIFETIME_DAYS=1

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Audit logging
AUDITLOG_INCLUDE_ALL_MODELS=True
AUDITLOG_EXCLUDE_TRACKING_MODELS=auditlog.LogEntry
AUDITLOG_DISABLE_REMOTE_ADDR=False

# Monitoring and Logging
SENTRY_DSN=https://your-sentry-dsn-here
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_SEND_DEFAULT_PII=False
ENVIRONMENT=development
RELEASE_VERSION=1.0.0

# Test settings
TEST_OUTPUT_DIR=test-results
TEST_PARALLEL=1