# =============================================================================
# Coastal Banking Backend - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in the values
# NEVER commit the actual .env file to version control!
# =============================================================================

# =============================================================================
# REQUIRED - Django Core
# =============================================================================
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# Set to False in production
DEBUG=True

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# REQUIRED - Database (PostgreSQL for production)
# =============================================================================
# For local development with SQLite, leave empty or use:
# DATABASE_URL=sqlite:///db.sqlite3

# For production PostgreSQL:
# DATABASE_URL=postgres://user:password@host:5432/dbname

# =============================================================================
# REQUIRED - CORS (Frontend URL)
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000

# =============================================================================
# OPTIONAL - Sendexa SMS Configuration
# =============================================================================
SENDEXA_API_URL=https://api.sendexa.co/v1/sms/send
SENDEXA_AUTH_TOKEN=your-base64-encoded-token
SENDEXA_SENDER_ID=CoastalBank

# =============================================================================
# OPTIONAL - Sentry Error Tracking
# =============================================================================
# Get DSN from https://sentry.io
SENTRY_DSN=
APP_VERSION=1.0.0

# =============================================================================
# OPTIONAL - Redis (for caching and Celery)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
