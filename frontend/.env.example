# =============================================================================
# Coastal Banking Frontend - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in the values
# NEVER commit the actual .env file to version control!
# =============================================================================

# =============================================================================
# DEVELOPMENT - API Configuration
# =============================================================================
# Use for local development
VITE_DEV_API_URL=http://localhost:8000/api/
VITE_DEV_WS_URL=ws://localhost:8000/ws/

# =============================================================================
# PRODUCTION - API Configuration (Required for production build)
# =============================================================================
# Your Render backend URL
VITE_PROD_API_URL=https://coastal-backend.onrender.com/api/
VITE_PROD_WS_URL=wss://coastal-backend.onrender.com/ws/

# Alternative (for docker-compose or Railway)
# VITE_API_BASE_URL=http://backend:8000
# VITE_API_URL=https://your-backend.railway.app

# =============================================================================
# OPTIONAL - Sentry Error Tracking
# =============================================================================
VITE_SENTRY_DSN=
VITE_SENTRY_ENABLED=true
VITE_RELEASE_VERSION=1.0.0

# =============================================================================
# OPTIONAL - Analytics
# =============================================================================
VITE_AMPLITUDE_API_KEY=

# =============================================================================
# DEVELOPMENT - Debug Settings
# =============================================================================
VITE_DEBUG_API=false
VITE_TEST_MODE=false
VITE_SENTRY_DEBUG=false
