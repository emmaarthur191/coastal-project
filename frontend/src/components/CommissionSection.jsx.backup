import React from 'react';
import { formatCurrencyGHS } from '../utils/formatters';

function CommissionSection({ commissionData }) {
  // Provide default values if data is not available
  const daily = commissionData?.daily || { total: 0, by_type: {} };
  const weekly = commissionData?.weekly || { total: 0, by_type: {} };
  const monthly = commissionData?.monthly || { total: 0, by_type: {} };
  const allTimeTotal = commissionData?.all_time_total || 0;

  return (
    <div style={{
      background: 'white',
      borderRadius: '16px',
      padding: '30px',
      boxShadow: '0 4px 6px -1px rgba(0, 0, 0, 0.1)',
      border: '1px solid #e2e8f0'
    }}>
      <h3 style={{
        margin: '0 0 24px 0',
        color: '#1e293b',
        fontSize: '20px',
        fontWeight: '600',
        display: 'flex',
        alignItems: 'center',
        gap: '10px'
      }}>
        ðŸ’Ž Commission Summary
      </h3>

      {/* Period Summaries */}
      <div style={{ display: 'grid', gridTemplateColumns: 'repeat(auto-fit, minmax(200px, 1fr))', gap: '20px', marginBottom: '30px' }}>
        <div style={{ padding: '20px', background: 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)', borderRadius: '12px', textAlign: 'center', color: 'white' }}>
          <div style={{ fontSize: '14px', opacity: 0.9, marginBottom: '8px' }}>Today</div>
          <div style={{ fontSize: '28px', fontWeight: '700' }}>{formatCurrencyGHS(daily.total)}</div>
        </div>
        <div style={{ padding: '20px', background: 'linear-gradient(135deg, #f093fb 0%, #f5576c 100%)', borderRadius: '12px', textAlign: 'center', color: 'white' }}>
          <div style={{ fontSize: '14px', opacity: 0.9, marginBottom: '8px' }}>This Week</div>
          <div style={{ fontSize: '28px', fontWeight: '700' }}>{formatCurrencyGHS(weekly.total)}</div>
        </div>
        <div style={{ padding: '20px', background: 'linear-gradient(135deg, #4facfe 0%, #00f2fe 100%)', borderRadius: '12px', textAlign: 'center', color: 'white' }}>
          <div style={{ fontSize: '14px', opacity: 0.9, marginBottom: '8px' }}>This Month</div>
          <div style={{ fontSize: '28px', fontWeight: '700' }}>{formatCurrencyGHS(monthly.total)}</div>
        </div>
        <div style={{ padding: '20px', background: 'linear-gradient(135deg, #43e97b 0%, #38f9d7 100%)', borderRadius: '12px', textAlign: 'center', color: 'white' }}>
          <div style={{ fontSize: '14px', opacity: 0.9, marginBottom: '8px' }}>All Time</div>
          <div style={{ fontSize: '28px', fontWeight: '700' }}>{formatCurrencyGHS(allTimeTotal)}</div>
        </div>
      </div>

      {/* Breakdown by Type */}
      <div style={{ marginTop: '30px' }}>
        <h4 style={{ margin: '0 0 16px 0', color: '#475569', fontSize: '16px', fontWeight: '600' }}>
          Commission Breakdown
        </h4>
        <div style={{ display: 'grid', gridTemplateColumns: 'repeat(auto-fit, minmax(280px, 1fr))', gap: '20px' }}>
          {/* Daily Breakdown */}
          <div style={{ padding: '20px', background: '#f8fafc', borderRadius: '12px', border: '1px solid #e2e8f0' }}>
            <div style={{ fontSize: '14px', fontWeight: '600', color: '#64748b', marginBottom: '12px' }}>Today's Breakdown</div>
            {Object.entries(daily.by_type || {}).map(([type, amount]) => (
              <div key={type} style={{ display: 'flex', justifyContent: 'space-between', padding: '8px 0', borderBottom: '1px solid #e2e8f0' }}>
                <span style={{ color: '#475569', textTransform: 'capitalize' }}>{type.replace('_', ' ')}</span>
                <span style={{ fontWeight: '600', color: '#1e293b' }}>{formatCurrencyGHS(amount)}</span>
              </div>
            ))}
            {Object.keys(daily.by_type || {}).length === 0 && (
              <div style={{ color: '#94a3b8', fontSize: '14px', textAlign: 'center', padding: '12px 0' }}>No commissions today</div>
            )}
          </div>

          {/* Weekly Breakdown */}
          <div style={{ padding: '20px', background: '#f8fafc', borderRadius: '12px', border: '1px solid #e2e8f0' }}>
            <div style={{ fontSize: '14px', fontWeight: '600', color: '#64748b', marginBottom: '12px' }}>This Week's Breakdown</div>
            {Object.entries(weekly.by_type || {}).map(([type, amount]) => (
              <div key={type} style={{ display: 'flex', justifyContent: 'space-between', padding: '8px 0', borderBottom: '1px solid #e2e8f0' }}>
                <span style={{ color: '#475569', textTransform: 'capitalize' }}>{type.replace('_', ' ')}</span>
                <span style={{ fontWeight: '600', color: '#1e293b' }}>{formatCurrencyGHS(amount)}</span>
              </div>
            ))}
            {Object.keys(weekly.by_type || {}).length === 0 && (
              <div style={{ color: '#94a3b8', fontSize: '14px', textAlign: 'center', padding: '12px 0' }}>No commissions this week</div>
            )}
          </div>

          {/* Monthly Breakdown */}
          <div style={{ padding: '20px', background: '#f8fafc', borderRadius: '12px', border: '1px solid #e2e8f0' }}>
            <div style={{ fontSize: '14px', fontWeight: '600', color: '#64748b', marginBottom: '12px' }}>This Month's Breakdown</div>
            {Object.entries(monthly.by_type || {}).map(([type, amount]) => (
              <div key={type} style={{ display: 'flex', justifyContent: 'space-between', padding: '8px 0', borderBottom: '1px solid #e2e8f0' }}>
                <span style={{ color: '#475569', textTransform: 'capitalize' }}>{type.replace('_', ' ')}</span>
                <span style={{ fontWeight: '600', color: '#1e293b' }}>{formatCurrencyGHS(amount)}</span>
              </div>
            ))}
            {Object.keys(monthly.by_type || {}).length === 0 && (
              <div style={{ color: '#94a3b8', fontSize: '14px', textAlign: 'center', padding: '12px 0' }}>No commissions this month</div>
            )}
          </div>
        </div>
      </div>
    </div>
  );
}

export default CommissionSection;